@model Assessment.Models.Employee

@{
    ViewBag.Title = "Details";
}

<h2>Employee Details</h2>

<div>
    <div class="row">
        
        <hr />
        <div class="col-md-6 col-md-offset-1">
            @if (Model.ImageFileName != null && Model.ImageFileName !="")
            {
                <img class="img-thumbnail" width="80px" height="80px" src="@Url.Content(Model.ImageFileName)" alt="Image" />
            }
            else
            {
                <img class="img-thumbnail" width="80px" height="80px" src="@Url.Content("~/Content/ProfileImages/Sample.png")" alt="Image" />
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ContactNumber)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ContactNumber)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Address)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Address)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Position)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Position)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.JoiningDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.JoiningDate)
                </dd>

                
                <dt>
                    
                    @Html.DisplayNameFor(model => model.EndDate)
                </dt>

                @if (Model.EndDate != DateTime.MinValue)
                {
                    <dd>
                        @Html.DisplayFor(model => model.EndDate)
                    </dd>
                }
                else
                {
                <dd>
                    -
                </dd>
                }
               

                <dt>
                    @Html.DisplayNameFor(model => model.EmploymentStatus)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.EmploymentStatus)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ShiftTimings)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ShiftTimings)
                </dd>



                <dt>
                    @Html.DisplayNameFor(model => model.FavColor)
                </dt>
                @if (Model.FavColor != null)
                {
                    <dd style="background-color:#@Model.FavColor; border: 1px; border-radius: 2px ">
                      
                    </dd>
                }
                else
                {
                    <dd >
                        Color Not Specified
                    </dd>
                }


                <dt>
                    @Html.DisplayNameFor(model => model.Parent)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Parent.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Department)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Department.DepartmentName)
                </dd>

            </dl>
            </div>
        </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
